    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}